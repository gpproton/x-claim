<Project>
  <PropertyGroup>
    <Title>x-claim</Title>
    <Version>0.1-preview.1</Version>
    <Authors>Godwin peter .O</Authors>
    <Description>An IOU payment management system</Description>
    <RepositoryType>git</RepositoryType>
    <RepoRoot>$(MSBuildThisFileDirectory)</RepoRoot>
    <RepositoryUrl>https://github.com/gpproton/x-claim</RepositoryUrl>
    <PackageProjectUrl>https://github.com/gpproton/x-claim</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <LicenseFile>$(MSBuildThisFileDirectory)LICENSE</LicenseFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Â© x-claim Contributors. All rights reserved.</Copyright>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">True</ContinuousIntegrationBuild>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <InvariantGlobalization>true</InvariantGlobalization>
    <!-- TODO: Enable when in public release -->
    <!-- <UseArtifactsOutput>true</UseArtifactsOutput> -->
  </PropertyGroup>

  <PropertyGroup>
    <ArdalisVersion>8.0.0</ArdalisVersion>
    <AxolotlVersion>8.0.0</AxolotlVersion>
    <AspCoreVersion>8.0.0</AspCoreVersion>
    <DotnetVersion>8.0.0</DotnetVersion>
    <EfcoreVersion>8.0.0</EfcoreVersion>
  </PropertyGroup>

</Project>
